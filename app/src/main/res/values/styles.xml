<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Bold32Text">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">?attr/colorOfText</item>
        <item name="android:textSize">@dimen/text_size_32</item>
    </style>

    <style name="Medium22Text">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOfText</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="Medium16Text" parent="Medium22Text">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Regular16Text" parent="Medium16Text">
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Regular12Text" parent="Regular16Text">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/hh_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/Regular16Text</item>
        <item name="android:textCursorDrawable">@drawable/cursor_for_search_edittext</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/background_for_search_edit_text</item>
        <item name="android:backgroundTint">@color/another_grey</item>
        <item name="android:paddingHorizontal">@dimen/team_indent</item>
        <item name="android:paddingVertical">@dimen/team_indent</item>
    </style>
    
    <style name="BlueButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/hh_blue</item>
        <item name="android:textAppearance">@style/Medium16Text</item>
        <item name="android:background">@drawable/background_for_search_edit_text</item>
    </style>
    
    <style name="TransparentButton" parent="BlueButton">
        <item name="android:textColor">@color/hh_red</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Header" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/Medium22Text</item>
    </style>

    <style name="vacancyCounter">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Regular16Text</item>
        <item name="android:background">@drawable/counter_vacancy_background</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TransparentEndIconStyle">
        <item name="background">@android:color/transparent</item>
        <item name="android:foreground">@android:color/transparent</item>
    </style>

    <style name="filterTextInputLayoutWork">
        <item name="boxBackgroundColor">?attr/colorBackgroundFilterTextInputLayout</item>
    </style>

    <style name="filterTextInputLayout">
        <item name="boxBackgroundColor">?attr/colorTextLayoutBackground</item>
    </style>

    <style name="filterTextInputEditText">
        <item name="android:textColorHint">?attr/colorFilterTextInputLayout</item>
    </style>


</resources>
